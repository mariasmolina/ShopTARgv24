@model ShopTARgv24.Models.OpenWeather.OpenWeatherSearchViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4" style="font-family: Arial;">Search the forecast in a city</h2>
                    <form method="post" asp-action="searchCity" asp-controller="openWeather">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">City name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>