@model ShopTARgv24.Models.Kindergartens.KindergartenDeleteViewModel

<div class="container mt-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-danger text-white text-center">
                <h1>Delete</h1>
            </div>
            <div class="card-body p-4">
                <h4>Kindergarten</h4>
                <hr />
                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.Id)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="GroupName" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.GroupName)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="ChildrenCount" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.ChildrenCount)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="KindergartenName" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.KindergartenName)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="TeacherName" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.TeacherName)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.CreatedAt)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="UpdatedAt" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.UpdatedAt)
                    </div>
                </dl>
                <form asp-action="DeleteConfirmation">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger m-2" />
                    <a asp-action="Index" asp-controller="kindergartens" class="btn btn-secondary m-2">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>