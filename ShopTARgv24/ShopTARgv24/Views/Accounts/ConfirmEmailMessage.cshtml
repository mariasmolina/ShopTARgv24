@{
    ViewData["Title"] = "ConfirmEmailMessage";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; background: linear-gradient(135deg, #e0e7ff 0%, #f0fdfa 100%); border-radius: 1.5rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <span class="display-3" style="color: #6366f1;">
                    <i class="bi bi-envelope-paper-heart"></i>
                </span>
            </div>
            <h2 class="fw-bold mb-3" style="color: #2563eb;">Thank You for Registering!</h2>
            <p class="mb-3" style="font-size: 1.15rem; color: #334155;">
                We’ve sent a confirmation link to your email address.
            </p>
            <div class="mb-4">
                <span class="badge rounded-pill bg-primary-subtle text-primary-emphasis px-3 py-2 text-wrap w-100 d-inline-block" style="font-size: 1rem; white-space: normal;">
                    Please check your inbox and confirm your registration.
                </span>
            </div>
            <div class="mt-4">
                <i class="bi bi-arrow-down-circle" style="font-size: 2rem; color: #38bdf8;"></i>
            </div>
        </div>
    </div>
</div>