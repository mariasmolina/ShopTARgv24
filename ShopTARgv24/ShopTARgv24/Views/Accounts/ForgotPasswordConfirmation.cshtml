@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; background: linear-gradient(135deg, #fef3c7 0%, #fce7f3 100%); border-radius: 1.5rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <span class="display-3" style="color: #f59e0b;">
                    <i class="bi bi-envelope-check-fill"></i>
                </span>
            </div>
            <h2 class="fw-bold mb-4" style="color: #ea580c;">Check Your Email</h2>
            <p class="mb-4" style="font-size: 1.2rem; color: #334155;">
                We've sent you a password reset link.
            </p>
            <div class="mt-4">
                <a asp-controller="Accounts" asp-action="Login" class="btn btn-warning rounded-pill px-4">
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>