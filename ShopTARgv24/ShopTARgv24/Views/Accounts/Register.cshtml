@model ShopTARgv24.Models.Accounts.RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}
<div class="row justify-content-center mt-5">
    <div class="col-sm-6 col-md-4">

        <div class="card shadow-lg p-4">
            <h1 class="text-center mb-4 text-primary">User Registration</h1>
            <hr class="mb-4" />

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter your city (optional)" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name (optional)" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block w-100 mb-3">
                    Register
                </button>

                <a asp-action="Login" class="btn btn-secondary btn-block w-100">
                    Back to Login
                </a>
            </form>
        </div>

    </div>
</div>