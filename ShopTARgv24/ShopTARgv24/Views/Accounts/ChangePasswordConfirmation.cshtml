@{
    ViewData["Title"] = "Change Password Confirmation";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; background: linear-gradient(135deg, #dcfce7 0%, #fef3c7 100%); border-radius: 1.5rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <span class="display-3" style="color: #16a34a;">
                    <i class="bi bi-shield-check"></i>
                </span>
            </div>
            <h2 class="fw-bold mb-3" style="color: #15803d;">Password Changed Successfully!</h2>
            <p class="mb-3" style="font-size: 1.15rem; color: #334155;">
                Your password has been updated successfully.
            </p>
            <div class="mb-4">
                <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3 py-2 text-wrap w-100 d-inline-block" style="font-size: 1rem; white-space: normal;">
                    You can now use your new password to log in.
                </span>
            </div>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success rounded-pill px-4">
                    Go to Home
                </a>
            </div>
        </div>
    </div>
</div>
