@{
    ViewData["Title"] = "ConfirmEmail";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; background: linear-gradient(135deg, #e0e7ff 0%, #f0fdfa 100%); border-radius: 1.5rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <span class="display-3" style="color: #22c55e;">
                    <i class="bi bi-patch-check-fill"></i>
                </span>
            </div>
            <h2 class="fw-bold mb-3" style="color: #2563eb;">Email Confirmed!</h2>
            <p class="mb-3" style="font-size: 1.15rem; color: #334155;">
                Thank you for confirming your email address.
            </p>
            <div class="mb-4">
                <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3 py-2 text-wrap w-100 d-inline-block" style="font-size: 1rem; white-space: normal;">
                    Your account is now active. You can start using all features.
                </span>
            </div>
            <div class="mt-4">
                <i class="bi bi-arrow-right-circle" style="font-size: 2rem; color: #2563eb;"></i>
            </div>
        </div>
    </div>
</div>