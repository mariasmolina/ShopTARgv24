@model ShopTARgv24.Models.Accounts.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-sm-6 col-md-4">

        <div class="card shadow-lg p-4">
            <h1 class="text-center mb-4 text-primary">Forgot Password</h1>
            <hr class="mb-4" />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block w-100 mb-3">
                    Submit
                </button>

                <div class="text-center">
                    <a asp-action="Login" class="text-muted">Back to Login</a>
                </div>
            </form>
        </div>

    </div>
</div>