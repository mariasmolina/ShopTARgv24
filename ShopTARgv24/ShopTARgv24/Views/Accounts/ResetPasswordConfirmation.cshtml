@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; background: linear-gradient(135deg, #dcfce7 0%, #fef3c7 100%); border-radius: 1.5rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <span class="display-3" style="color: #16a34a;">
                    <i class="bi bi-check-circle-fill"></i>
                </span>
            </div>
            <h2 class="fw-bold mb-4" style="color: #15803d;">Your password is successfully changed.</h2>
            <div class="mt-4">
                <a asp-controller="Accounts" asp-action="Login" class="btn btn-success rounded-pill px-4">
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>