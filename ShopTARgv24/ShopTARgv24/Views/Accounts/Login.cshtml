@model ShopTARgv24.Models.Accounts.LoginViewModel
@{
    ViewBag.Title = "User Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-sm-6 col-md-4">

        <div class="card shadow-lg p-4">
            <h1 class="text-center mb-4 text-primary">User Login</h1>
            <hr class="mb-4" />

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="form-check">
                        <label asp-for="RememberMe" class="form-check-label">
                            <input asp-for="RememberMe" class="form-check-input" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block w-100 mb-3">
                    Login
                </button>

                <a asp-action="Register" class="btn btn-success btn-block w-100 mb-3">
                    Create New Account
                </a>

                <div class="text-center">
                    <a asp-action="ForgotPassword" class="text-muted">Forgot password?</a>
                </div>
            </form>
        </div>

    </div>
</div>