@model IEnumerable<ShopTARgv24.Models.RealEstate.RealEstateIndexViewModel>

<div class="h1 text-center">RealEstate</div>
<div class="w-75 mx-auto">
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="create" asp-controller="realestate" type="submit" class="btn btn-success">Create</a>
    </div>
    <form method="post">
        <div class="table-responsive shadow rounded">
            <table class="table table-striped align-middle text-center table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nr</th>
                        <th scope="col">Area</th>
                        <th scope="col">Location</th>
                        <th scope="col">Room number</th>
                        <th scope="col">Building type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var rowNumber = 1;
                    }
                    @foreach (var realestate in Model)
                    {
                        <tr>
                            <td>@rowNumber</td>
                            <td>@realestate.Area</td>
                            <td>@realestate.Location</td>
                            <td>@realestate.RoomNumber</td>
                            <td>@realestate.BuildingType</td>
                            <td>
                                <a asp-action="update" asp-controller="realestate" asp-route-id="@realestate.Id" class="btn btn-primary m-1">Update</a>
                            </td>
                        </tr>
                        rowNumber++;
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>