@model ShopTARgv24.Models.RealEstate.RealEstateDetailsViewModel

<div class="container mt-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-info text-white text-center">
                <h1>Details</h1>
            </div>
            <div class="card-body p-4">
                <h4>Real Estate</h4>
                <hr />
                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.Id)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="Area" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.Area)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="Location" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.Location)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="RoomNumber" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.RoomNumber)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="BuildingType" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.BuildingType)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.CreatedAt)
                    </div>
                </dl>

                <dl class="row">
                    <div class="form-group row">
                        <label asp-for="ModifiedAt" class="col-sm-3 col-form-label fw-bold"></label>
                        @Html.DisplayFor(Model => Model.ModifiedAt)
                    </div>
                </dl>
                @foreach (var images in Model.Image)
                {
                    <partial name="_Images" model="images" />
                }
                <a asp-action="Index" asp-controller="realestate" class="btn btn-secondary m-2">Back</a>
            </div>
        </div>
    </div>
</div>
